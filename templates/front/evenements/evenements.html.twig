{% extends 'front/general.html.twig' %}

{% block contenu %}
    <div class="evenements">

        <a href="index.php?page=poster_evenement" class="button proposer">Proposer un événement</a>

        <hr class="hr-actu deux">

        <i class="fa fa-calendar-o fa-4x" aria-hidden="true"></i>
        <h2>Événements à venir</h2>
        <div class="EventAVenir">


            {% for evenement in liste %}
            {% if evenement.approuve == 1 %}
            <a href="index.php?page=article_evenement&id={{ evenement.id }}">

                <div class="event_content">
                    <h4 class="titre">{{ evenement.date | date("d/m/Y") }} | {{ evenement.titre }}</h4>

                    <img class="article_imgs" src="media/interface/{{ evenement.image }}" alt="image">
                    <p><span>{{ evenement.contenu | slice(0, 200)  }}...</span></p>
                </div>

            </a>
                <hr class="hr-auteur">
            {% endif %}
            {% endfor %}


</div>
    </div>
{% endblock %}

{% block meteo %}
<i class="fa fa-sun-o fa-4x" aria-hidden="true"></i>
<h2 id="meteo">Météo campus</h2>
    <div id="jours">
        <div class="jours">
            <ul>
                <li><h4 class="titre">Lundi 07 Nov.</h4></li>
                <li>Matin : 8°C</li>
                <li>Après-midi : 11°C</li>
                <li>Temps nuageux</li>
            </ul>
        </div>

        <div class="jours">
            <ul>
                <li><h4 class="titre">Mardi 08 Nov.</h4></li>
                <li>Matin : 7°C</li>
                <li>Après-midi : 9°C</li>
                <li>Temps pluvieux</li>
            </ul>
        </div>
    </div>
{% endblock %}

