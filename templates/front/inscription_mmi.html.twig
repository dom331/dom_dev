<hr class="hr-index">

<div class="interface_connexion">
    <p>Vous êtes...</p>
    <form method="post">
        <p>Promo :</p>
        <SELECT size="1" name="promo">
            <OPTION>2018</OPTION>
            <OPTION>2017</OPTION>
            <OPTION>2016</OPTION>
        </SELECT>

        <p>identifiant LDAP :</p>
        <textarea rows="10" cols="20"  name="identifiant"></textarea>


        <p>Mot de passe LDAP :</p>
            <textarea rows="10" cols="20"  name="mdp"></textarea>

        <p>Email de contact :</p>
        <textarea rows="10" cols="20"  name="email"></textarea>

        <p>Avatar :</p>
        <textarea rows="10" cols="20"  name="avatar"></textarea>

        <p>Groupe :</p>
        <SELECT size="1" name="groupe">
            <OPTION>1</OPTION>
            <OPTION>2</OPTION>
        </SELECT>


        <input class="button submit" type="submit" name="soumettre" value="soumettre" />
        </form>
    <br/>
    <hr class="hr-index">

    <footer>
        <a href="http://mmimontbeliard.com">
            <img src="media/interface/mmi.png" id="logo-mmi" alt="Logo-MMI">
        </a>
    </footer>

