{% extends 'front/general.html.twig' %}

{% block contenu %}
    {% if liste !='' %}
        <div class="article">
            <i class="fa fa-file-text fa-4x" aria-hidden="true"></i>

            <h2>{{ liste.oui.nom }} {{ liste.oui.prenom }}</h2>
            <img src="media/uploads/avatars/{{ liste.oui.image }}" alt="img" id="avatar">

            <div class="article_content">
                <h3 class="titre">Informations :</h3>
                <p><span class="titre">Nom :</span> {{ liste.oui.prenom }} {{ liste.oui.nom }} </p>
                <p><span class="titre">Date Inscription :</span> {{ liste.oui.date_inscription | date("d/m/Y") }}</p>
                <p><span class="titre">Email :</span> {{ liste.oui.email }}</p>
                <p><span class="titre">Date de demande :</span> {{ liste.oui.date_inscription | date("d/m/Y") }}</p>
            </div>

        </div>
    {% endif %}
{% endblock %}

{% block aside %}
    <div class="auteur-article">
        <i class="fa fa-briefcase fa-4x" aria-hidden="true"></i>
        <h2>Gestion</h2>
        {% if session.toto.admin == 1 %}
            <hr class="hr-menu">
            <form method="post">
                <input name="valider" class="button connexion" type="submit" value="Approuver l'utilisateur">
                <input name="supprimer" class="button connexion" type="submit" value="Supprimer l'utilisateur">
            </form>
            <hr class="hr-menu">
        {% endif %}
    </div>
{% endblock %}
