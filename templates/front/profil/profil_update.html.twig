{% extends 'front/general.html.twig' %}

{% block contenu %}
        <form method="post" enctype="multipart/form-data" >
        <div class="article">

            <i class="fa fa-file-text fa-4x" aria-hidden="true"></i>
            <h2>{% if liste !='' %}
                    {{ liste.oui.nom }}  {{ liste.oui.prenom }}
                {% endif %}</h2>
            {% if liste !='' %}
                <img id="avatar" src="media/interface/{{ liste.oui.avatar }}" alt="avatar">
                <div class="liste-img">
                    <input type="file" name="fichier" title="Rechercher"/>
                </div>
            {% endif %}

            <div class="auteur-article">

                {% if liste !='' %}
                    <p class="nom">{{ liste.oui.nom }} {{ liste.oui.prenom }}</p>
                    <p>Description : <input type="text" name="description" placeholder="{{ liste.oui.description }}" /></p>
                    <p>Mail :<input type="text" name="email" placeholder="{{ liste.oui.email }}" /></p>
                {% endif %}
                    <p>Date de naissance : <input type="text" name="naiss" id="datepicker"/></p>
            </div>



        </div>
