{% extends 'front/general.html.twig' %}

{% block contenu %}

    <i class="fa fa-chain-broken fa-4x" aria-hidden="true"></i>
    <h2 id="actu">Objets perdus
        {% if session.toto.admin == 1 %}
            <a class="fa fa-plus-circle fa-lg" href="index.php?page=add_objetsperdus"></a>
        {% endif %}
    </h2>

    {% if liste != null  %}
        <div class="desc_cadre">
            Les objets suivants ont été retrouvé près ou au sein du département.<br>
            Si vous reconnaissez une de vos affaires, rendez-vous au secrétariat !
        </div>
        {%  for liste in liste %}
            <a href="index.php?page=article_objetperdu&id={{ liste.id }}">

                <div class="actu_content">

                    <h4 class="titre">{{ liste.date | date("d/m/Y") }} | {{ liste.titre }}</h4>
                    <img class="article_imgs" src="media/uploads/objetsperdus/{{ liste.image }}" alt="image">
                    <p><span>{{ liste.contenu|slice(0, 170)|striptags|raw  }}...</span></p>
                    <p class="auteur">{{ liste.responsables }}</p>
                    <hr class="hr-auteur">
                </div>
            </a>
        {%  endfor %}

     {% else %}
         <div class="desc_cadre">
            Aucun objet n'a été retrouvé au département.<br>
            Si vous avez perdu quelque chose, contactez l'administration.
         </div>
    {%  endif %}




{% endblock %}

{% block aside %}
    <i class="fa fa-briefcase fa-4x" aria-hidden="true"></i>
    <h2>Outils</h2>
    <ul>
        <a href="?page=viescolaire">Vie Scolaire</a>
        <a href="?page=edt"><li>Emploi du temps</li></a>
        <a href="?page=absences"><li>Absences</li></a>
        <a href="?page=objetsperdus"><li>Objets perdus</li></a>
    </ul>
{% endblock %}