{% extends 'front/general.html.twig' %}

{% block contenu %}

    <div class="poster_evenement">


        <i class="fa fa-chain-broken fa-4x" aria-hidden="true"></i>
        <h2>Nouvel objet perdu</h2>


        <form method="post" enctype="multipart/form-data">
            <p>Titre :</p>
            <input class="nom-event" type="text" name="titre" required/>
            <p>Informations sur l'objet :</p>
            <textarea rows="10" cols="20" class="description-event" name="contenu" required></textarea>

            <p>Image de l'objet perdu :
                <input name="oui" type="file" title="Rechercher" /></p>

            <input type="hidden" name="perdu" value="1">

            <input type="hidden" name="urgent" value="0">

            <p>Auteur :</p>
            <input class="nom-event" type="text" name="responsables" required/>

            <hr class="hr-actu">
            <input class="button submit connexion" type="submit" name="soumettre" value="soumettre" />
            <hr class="hr-actu">
        </form>

    </div>

{% endblock %}
